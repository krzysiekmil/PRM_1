<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expense_row_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/expense_id"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView android:id="@+id/expense_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/expense_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/expense_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/expense_id"
        app:layout_constraintTop_toBottomOf="@+id/expense_date"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        />

    <TextView android:id="@+id/expense_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/expense_id"
        app:layout_constraintTop_toBottomOf="@+id/expense_place"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        />

    <TextView android:id="@+id/expense_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/expense_id"
        app:layout_constraintTop_toBottomOf="@+id/expense_value"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />


</androidx.constraintlayout.widget.ConstraintLayout>